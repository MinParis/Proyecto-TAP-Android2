<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio 10"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:drawable/editbox_background"
        android:padding="24dp"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colores"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#9999FF"
            android:layout_marginBottom="20dp" />

        <RadioGroup
            android:id="@+id/grupoColores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/optRojo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="ðŸ”´ Rojo"
                android:textSize="16sp"
                android:checked="true"
                android:layout_marginBottom="12dp" />

            <RadioButton
                android:id="@+id/optVerde"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="ðŸŸ¢ Verde"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

            <RadioButton
                android:id="@+id/optAzul"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="ðŸ”µ Azul"
                android:textSize="16sp" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Aceptar"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Color elegido: Rojo"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <View
            android:id="@+id/vistaColorSeleccionado"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FF0000"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vista previa del color seleccionado"
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Volver al MenÃº" />

</LinearLayout>