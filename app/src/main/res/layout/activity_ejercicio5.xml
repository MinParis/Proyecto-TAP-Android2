<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio 5"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usa los botones para llenar la lista:"
        android:textSize="16sp"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btnPares"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Pares"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#4CAF50" />

        <Button
            android:id="@+id/btnImpares"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Impares"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#2196F3" />

        <Button
            android:id="@+id/btnVaciar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Vaciar"
            android:textSize="16sp"
            android:backgroundTint="#FF5722" />

    </LinearLayout>

    <Spinner
        android:id="@+id/cboNumeros"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="@android:drawable/btn_dropdown"
        android:padding="12dp" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Selecciona una opción para ver números"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Volver al Menú" />

</LinearLayout>