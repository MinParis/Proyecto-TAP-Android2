<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ejercicio 8"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desliza la barra para cambiar el valor:"
        android:textSize="16sp"
        android:layout_marginBottom="30dp" />

    <SeekBar
        android:id="@+id/desValor"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:max="100"
        android:progress="20"
        android:layout_marginBottom="20dp"
        android:progressTint="#2196F3"
        android:thumbTint="#1976D2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rango: 50 - 150"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/lblValor"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="El valor es: 70"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_weight="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_weight="0" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_weight="0" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incremento: 2 unidades por paso"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Volver al MenÃº" />

</LinearLayout>